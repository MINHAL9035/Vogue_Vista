<!-- Header -->
<header class="header-v2" style="box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
    <!-- Header desktop -->
    <div class="container-menu-desktop trans-03">
        <div class="wrap-menu-desktop">
            <nav class="limiter-menu-desktop p-l-45">
                <!-- Logo desktop -->
                <a href="#" class="logo">
                    <img src="/images/icons/newlogo.png" alt="IMG-LOGO" />
                </a>
                <!-- Menu desktop -->
                <div class="menu-desktop">
                    <ul class="main-menu">
                        <li>
                            <a class="menu-link" href="/">Home</a>
                        </li>
                        <li>
                            <a class="menu-link" href="/shop">Shop</a>
                        </li>
                        <li>
                            <a class="menu-link" href="/about">About</a>
                        </li>

                        <li>
                            <a class="menu-link" href="/contact">Contact</a>
                        </li>
                        <div class="dropdown">
                            <!-- Profile link -->
                            <li>
                                <a class="menu-link" id="login" href="#">
                                    <%= locals.user ? user.username : "Profile" %>
                                </a>
                            </li>
                            <!-- Dropdown content -->
                            <div class="dropdown-content">
                                <!-- User Profile link -->
                                <a class="menu-link" href="/userProfile">User Profile</a>
                                <!-- Login link -->
                                <%if(locals.user) { %>
                                    <a class="menu-link" href="/logout">Logout</a>
                                    <%}else{%>
                                        <a class="menu-link" href="/login">Login</a>
                                        <%}%>
                            </div>
                        </div>
                    </ul>
                </div>

                <!-- Icon header -->
                <div class="wrap-icon-header flex-w flex-r-m h-full">
                    <div class="flex-c-m h-full p-r-24">
                        <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 ">
                            <i class="zmdi zmdi-search"></i>
                        </div>
                    </div>

                    <div class="flex-c-m h-full p-l-18 p-r-25 bor5">
                        <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11" data-notify="2">
                            <a href="/cart" style="text-decoration: none;color: black;"><i
                                    class="zmdi zmdi-shopping-cart"></i></a>
                        </div>
                    </div>

                    <div class="flex-c-m h-full p-lr-19">
                        <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 js-show-sidebar">
                            <i class="zmdi zmdi-menu"></i>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <!-- Header Mobile -->
    <div class="wrap-header-mobile">
        <!-- Logo moblie -->
        <div class="logo-mobile">
            <a href="#" class="logo">
                <img src="/images/icons/newlogo.png" alt="IMG-LOGO" />
            </a>
        </div>

        <!-- Icon header -->
        <div class="wrap-icon-header flex-w flex-r-m h-full m-r-15">
            <div class="flex-c-m h-full p-r-10">
                <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 ">
                    <i class="zmdi zmdi-search"></i>
                </div>
            </div>

            <div class="flex-c-m h-full p-lr-10 bor5">
                <div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11  js-show-cart" data-notify="2">
                    <i class="zmdi zmdi-shopping-cart"></i>
                </div>
            </div>
        </div>

        <!-- Button show menu -->
        <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
            <span class="hamburger-box">
                <span class="hamburger-inner"></span>
            </span>
        </div>
    </div>

    <!-- Menu Mobile -->
    <div class="menu-mobile">
        <ul class="main-menu-m">
            <li>
                <a class="menu-link" href="/">Home</a>
            </li>

            <li>
                <a class="menu-link" href="/shop">Shop</a>
            </li>
            <li>
                <a class="menu-link" href="/about">About</a>
            </li>

            <li>
                <a class="menu-link" href="/contact">Contact</a>
            </li>
            <li class="dropdown">
                <a class="menu-link" id="login" href="#" style="color: white ;">
                  <%= locals.user ? user.username : "Profile" %>
                </a>
                <ul class="dropdown-content">
                  <li>
                    <a class="menu-link" href="/userProfile">User Profile</a>
                  </li>
                  <% if (locals.user) { %>
                    <li>
                      <a class="menu-link" href="/logout">Logout</a>
                    </li>
                    <% } else { %>
                      <li>
                        <a class="menu-link" href="/login">Login</a>
                      </li>
                      <% } %>
                </ul>
              </li>
        </ul>
    </div>

    <!-- Modal Search -->
    <div class="modal-search-header flex-c-m trans-04 js-hide-modal-search">
        <div class="container-search-header">
            <button class="flex-c-m btn-hide-modal-search trans-04 js-hide-modal-search">
                <img src="/images/icons/icon-close2.png" alt="CLOSE" />
            </button>

            <form class="wrap-search-header flex-w p-l-15">
                <button class="flex-c-m trans-04">
                    <i class="zmdi zmdi-search"></i>
                </button>
                <input class="plh3" type="text" name="search" placeholder="Search..." />
            </form>
        </div>
    </div>
</header>


