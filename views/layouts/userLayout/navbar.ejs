<script>

    const currentURL = window.location.pathname;


    const menuLinks = document.querySelectorAll('.menu-link');


    menuLinks.forEach(link => {
        if (link.getAttribute('href') === currentURL) {
            link.parentElement.classList.add('active-menu');
        }
    });
</script>