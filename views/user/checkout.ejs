  <%- include('../layouts/userLayout/center.ejs') -%>

    <%- include('../layouts/userLayout/navbar.ejs') -%>


      <!-- Cart -->
      <div class="wrap-header-cart js-panel-cart">
        <div class="s-full js-hide-cart"></div>

        <div class="header-cart flex-col-l p-l-65 p-r-25">
          <div class="header-cart-title flex-w flex-sb-m p-b-8">
            <span class="mtext-103 cl2"> Your Cart </span>

            <div class="fs-35 lh-10 cl2 p-lr-5 pointer hov-cl1 trans-04 js-hide-cart">
              <i class="zmdi zmdi-close"></i>
            </div>
          </div>

          <div class="header-cart-content flex-w js-pscroll">
            <ul class="header-cart-wrapitem w-full">
              <% if (cartDetails && cartDetails.items) { %>
                <% cartDetails.items.forEach(item=> { %>
                  <li class="header-cart-item flex-w flex-t m-b-12">
                    <div class="header-cart-item-img">
                      <img src="/sharpimages/<%= item.product_id.image[0] %>" alt="IMG" />
                    </div>
                    <div class="header-cart-item-txt p-t-8">
                      <a href="#" class="header-cart-item-name m-b-18 hov-cl1 trans-04">
                        <%= item.product_id.name %>
                      </a>
                      <span class="header-cart-item-info">
                        <%= item.quantity %> x <%= item.product_id.price %>
                      </span>
                    </div>
                  </li>
                  <% }); %>
                    <% } else { %>
                      <li class="header-cart-item">Your cart is empty</li>
                      <% } %>
            </ul>
            <div class="w-full">
              <div class="header-cart-total w-full p-tb-40"></div>

              <div class="header-cart-buttons flex-w w-full">
                <a href="/cart" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-r-8 m-b-10">
                  View Cart
                </a>

                <a href="/checkout" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10">
                  Check Out
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- breadcrumb -->
      <div class="container">
        <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
          <a href="/home" class="stext-109 cl8 hov-cl1 trans-04">
            Home
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
          </a>
          <a href="/shop" class="stext-109 cl8 hov-cl1 trans-04">
            Shop
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
          </a>
          <a href="/cart" class="stext-109 cl8 hov-cl1 trans-04">
            Cart
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
          </a>
          <a href="/checkout" class="stext-109 cl8 hov-cl1 trans-04">
            Checkout
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
          </a>
        </div>
      </div>

      <!--=============================== table=========================================== -->
      <div class="container">
        <div class="row">
          <div class="col-lg-10 col-xl-7  m-b-50">
            <div class="m-l-25 m-r--38 m-lr-0-xl">
              <div class="wrap-table-shopping-cart" style="width: 110%">
                <table class="table-shopping-cart">
                  <tr class="table_head">
                    <th class="column-1">Product</th>
                    <th class="column-2"></th>
                    <th class="column-3">Price</th>
                    <th class="column-4">Quantity</th>
                    <th class="column-5">Total</th>
                  </tr>
                  <% if (cartDetails && cartDetails.items && cartDetails.items.length> 0) { %> <%
                      cartDetails.items.forEach(item=> { %>
                      <tr class="table_row">
                        <td class="column-1">
                          <div class="how-itemcart1">
                            <img src="/sharpimages/<%= item.product_id.image[0] %>" alt="IMG" />
                          </div>
                        </td>
                        <td class="column-2">
                          <%= item.product_id.name %>
                        </td>
                        <td class="column-3">₹ <%= item.product_id.price %>
                        </td>
                        <td class="column-4">
                          <input style="margin-left: 60%" class="mtext-104 cl3 txt-center num-product" type="number"
                            name="num-product1" value="<%= item.quantity%>" readonly />
                        </td>
                        <td class="column-5">₹<%= item.total_price %>
                        </td>
                      </tr>
                      <% }) %>
                        <% } else { %>
                          <tr>
                            <td colspan="5">No products</td>
                          </tr>
                          <% } %>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!--==================================== /table================================================================== -->

      <!-- ===================================CART TOTAL================================================================== -->
      <div class="col-sm-10 col-lg-7 col-xl-5  m-b-50" style="margin-left: 9%;">
        <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
          <h4 style="margin-left: 31%;text-decoration: underline;" class="mtext-109 cl2 p-b-30">Cart Totals</h4>
          <div class="flex-w flex-t bor12 p-b-13">
            <div class="size-208">
              <span class="stext-110 cl2"> Subtotal: </span>
            </div>
            <div class="size-209">
              <span class="mtext-110 cl2" id="total"> ₹<%=subTotal%> </span>
            </div>
          </div>
          <div class="flex-w flex-t bor12 p-t-15 p-b-30">
            <div class="size-208 w-full-ssm">
              <span class="stext-110 cl2"> Shipping: </span>
            </div>
            <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
              <span class="mtext-110 cl2"> ₹00.00 </span>
            </div>
          </div>
          <div class="flex-w flex-t bor12 p-t-15 p-b-30">
            <div class="size-208 w-full-ssm">
              <span class="stext-110 cl2"> Discount: </span>
            </div>
            <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
              <span class="mtext-110 cl2" id="discount"> ₹ 00.00 </span>
            </div>
          </div>
          <div class="flex-w flex-t p-t-27 p-b-33">
            <div class="size-208">
              <span class="mtext-101 cl2"> Total: </span>
            </div>
            <div class="size-209 p-t-1">
              <span class="mtext-110 cl2" id="totalAmount"> ₹<%=subTotal%> </span>
            </div>
          </div>

          <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#discountModal">
            choose Coupon
          </button>

          <div class="flex-w flex-t p-t-27 p-b-33">
            <input style="border: 1px solid lightblue; padding: 8px; width: 60%;" type="text"
              placeholder="Enter Coupon Code" id="code" required name="code">
            <button style="border: 1px solid lightblue; padding: 8px; background-color: #f0f0f0; cursor: pointer;"
              class="btn btn-outline-primary" onclick="applyCoupon($('#code').val())">Apply</button>
          </div>
        </div>
      </div>

      <!-- ===================================/CART TOTAL================================================================== -->
      <div class="container">
        <div class="row">
          <!-- Address Section -->
          <div class="col-lg-8 col-xl-9 mb-5">
            <button style="margin-left: 15%" type="button" class="btn btn-primary" data-toggle="modal"
              data-target="#addAddressModal">
              Add Address
            </button>

            <div class="m-lr-25 m-r-38 m-lr-0-xl mt-4">
              <h3 class="p-3" style="letter-spacing: 6px">SELECT ADDRESS</h3>

              <div class="wrap-table-shopping-cart">
                <table class="table-shopping-cart">
                  <tr class="table_row">
                    <td class="column-1">
                      <div class="options fw-bold">
                        <% user.address.forEach((address, index)=> { %>
                          <label for="option<%= index + 1 %>" class="op mb-2">
                            <input type="radio" id="option<%= index + 1 %>" name="options"
                              value="<%= address.name %>,&nbsp;<%= address.housename %>,&nbsp;<%= address.place %>,&nbsp;<%= address.phone %>,&nbsp;<%= address.pincode %>"
                              class="me-1" required />
                            <div class="address-details mt-2">
                              <span>
                                <%= address.name %>
                              </span><br />
                              <span>
                                <%= address.housename %>
                              </span>&nbsp;&nbsp;
                              <span>
                                <%= address.place %>
                              </span><br />
                              <span>
                                <%= address.phone %>
                              </span><br />
                              <span>
                                <%= address.pincode %>
                              </span><br />
                              <hr />
                            </div>
                          </label>
                          <br />
                          <% }) %>
                      </div>
                    </td>
                  </tr>
                </table>
              </div>
            </div>
          </div>

          <!-- Payment Method Section -->
          <div class="col-lg-4 col-xl-3 m-b-50 mt-5">
            <div class="bor10 p-lr-20 p-t-10 p-b-40 m-l-20 m-r-0-sm"
              style="background-color: white; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.455);">
              <h4 class="mtext-109 cl2 p-b-30 text-dark text-center" style="letter-spacing: 6px">PAYMENT METHOD</h4>

              <form>
                <div class="options fw-bold">
                  <label for="option1" class="op">
                    <input type="radio" id="option1" name="paymentOptions" value="COD" class="me-3" />
                    Cash on Delivery
                  </label>
                  <label for="option2" class="op">
                    <input type="radio" id="option2" name="paymentOptions" value="RazorPay" class="me-3" />
                    RazorPay
                  </label>
                  <label for="option3" class="op">
                    <input type="radio" id="option3" name="paymentOptions" value="Wallet" class="me-3" />
                    Wallet (₹ <%= user.wallet %>)
                  </label>
                </div>
                <div class="text-center mt-3">
                  <input type="button" value="Place an Order" class="btn btn-dark" onclick="placeOrder()" />
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>


      <!-- =========coupon Modal ========================================-->
      <div class="modal fade" id="discountModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
          <% if(coupon.length>0){%>
            <% coupon.forEach(coupons=>{ %>
              <div class="modal-content">
                <div class="modal-body text-center">
                  <div class="icon text-danger">
                    <i class="fas fa-gift"></i>
                  </div>
                  <div class="notice">
                    <h4>
                      <strong>CODE :</strong>&nbsp;<%= coupons.couponCode%>
                    </h4>
                    <p>
                      <%= coupons.couponDescription%> ₹<%= coupons.minAmount%>
                    </p>
                    <p>Use this coupon to get <span class="badge badge-info">₹<%= coupons.discountAmount%>OFF</span>
                      at
                      checkout.</p>
                  </div>
                  <div class="code"></div>
                </div>
                <div class="modal-footer d-flex justify-content-between">
                </div>
              </div>
              <% }) %>
                <%}else{%>
                  <div class="modal-content">
                    <div class="modal-body text-center">
                      <div class="icon text-danger">

                      </div>
                      <div class="notice">
                        <h4>
                          No coupons
                        </h4>

                      </div>
                      <div class="code"></div>
                    </div>
                    <div class="modal-footer d-flex justify-content-between">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                  </div>
                  <%}%>
        </div>
      </div>
      <!-- ========================/coupon modal=================================================== -->

      <!-- ========================Add Address Modal=============================================== -->
      <div class="modal" id="addAddressModal">
        <div class="modal-dialog">
          <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
              <h4 class="modal-title">Add Address</h4>
              <button type="button" class="close" data-dismiss="modal">
                &times;
              </button>
            </div>
            <!-- Modal Body -->
            <div class="modal-body">
              <form id="addressForm" method="post">
                <div class="form-group">
                  <label for="nameInput">Name:</label>
                  <input type="text" id="nameInput" name="name" class="form-control" required />
                </div>
                <div class="form-group">
                  <label for="houseNameInput">House Name:</label>
                  <input type="text" id="houseNameInput" name="houseName" class="form-control" required />
                </div>
                <div class="form-group">
                  <label for="phoneInput">Phone Number:</label>
                  <input type="tel" id="phoneInput" name="phone" class="form-control" required />
                </div>
                <div class="form-group">
                  <label for="placeInput">Place (City):</label>
                  <input type="text" id="placeInput" name="place" class="form-control" required />
                </div>
                <div class="form-group">
                  <label for="pincodeInput">Pincode:</label>
                  <input type="text" id="pincodeInput" name="pincode" class="form-control" required />
                </div>
                <div class="form-group">
                  <label for="stateInput">State:</label>
                  <input type="text" id="stateInput" name="state" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
          </div>
        </div>
      </div>

      <!-- Footer -->
      <%- include('../layouts/userLayout/page-footer.ejs') -%>

