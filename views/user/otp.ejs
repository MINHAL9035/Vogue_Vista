  <script>
    var timerSeconds = 60;
    var timerInterval;

    function startTimer() {
      document.getElementById("resendContainer").style.display = "none";
      document.getElementById("otpForm").style.display = "block";

      var timerDisplay = document.getElementById("timer");
      timerDisplay.textContent = timerSeconds;

      timerInterval = setInterval(function () {
        timerSeconds--;

        if (timerSeconds <= 0) {
          clearInterval(timerInterval);
          document.getElementById("otpForm").style.display = "none";
          document.getElementById("resendContainer").style.display = "block";
        } else {
          timerDisplay.textContent = timerSeconds;
        }
      }, 1000);
    }

    // Initial start of timer (you can call this when the page loads)
    startTimer();
  </script>
