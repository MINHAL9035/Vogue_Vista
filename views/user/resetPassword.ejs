<body>

  <%- include('../layouts/userLayout/navbar.ejs') -%>

    <div class="reset-container">
      <form class="reset-form" action="" method="POST">
        <h2 class="header">Reset Password <i class="fa-solid fa-lock fa-bounce"></i></h2>
        <input type="hidden" name="id" value="<%= locals.user_id %>" />

        <label for="new-password">New Password:</label>
        <input type="password" id="new-password" name="newPassword" required />

        <label for="confirm-password">Confirm Password:</label>
        <input type="password" id="confirm-password" name="confirmPassword" required />

        <button type="submit">Reset Password</button>

        <% if (typeof message !=='undefined' ) { %>
          <p style="text-align: center; font-size: smaller; color: red">
            <%- message %>
          </p>
          <% } %>
      </form>
    </div>


    <%- include('../layouts/userLayout/page-footer.ejs') -%>
