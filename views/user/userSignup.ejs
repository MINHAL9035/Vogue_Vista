    <div class="signup-container">
      <div class="form-section">
        <h2 class="heading">Sign Up</h2>
        <span class="sub">New User?Create a Account Here </span>
        <form id="userForm" method="post" onsubmit="return validateForm()">
          <input class="feilds" type="text" name="username" id="username" placeholder="Username" required />
          <br />
          <input class="feilds" type="email" name="email" id="email" placeholder="Email" required />
          <br />
          <input class="feilds" type="tel" name="mobileNumber" id="mobileNumber" placeholder="Mobile Number" required
            pattern="[0-9]{10}" />
          <br />
          <input class="feilds" type="password" name="password" id="password" placeholder="Password" required />
          <br />
          <input class="feilds" type="password" name="confirmPassword" id="confirmPassword"
            placeholder="Confirm Password" required />
          <button class="btn btn-primary submit " type="submit">Signup</button>
          <div id="errorMessages" class="error" style="color: red"></div>
        </form>
        <% if( messages.message ) { %>
          <p style="color: red">
            <%=messages.message %>
          </p>
          <%}%>
            <span class="member">Already a member? <a href="/login">Login Here</a></span>
      </div>
    </div>

    <!-- validation -->

    <script>
      function validateForm() {
        let username = document.getElementById("username").value;
        let email = document.getElementById("email").value;
        let mobileNumber = document.getElementById("mobileNumber").value;
        let password = document.getElementById("password").value;
        let confirmPassword = document.getElementById("confirmPassword").value;
        let errorMessages = document.getElementById("errorMessages");
        errorMessages.innerHTML = "";

        if (username.length < 3) {
          errorMessages.innerHTML =
            "Username must be at least 3 characters long";
          return false;
        }

        let emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(email)) {
          errorMessages.innerHTML = "Invalid email address";
          return false;
        }

        if (mobileNumber.length !== 10) {
          errorMessages.innerHTML = "Mobile number must be 10 digits";
          return false;
        }

        if (password !== confirmPassword) {
          errorMessages.innerHTML = "Passwords do not match";
          return false;
        }

        let strongPasswordRegex =
          /^(?=.*[a-zA-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;
        if (!strongPasswordRegex.test(password)) {
          errorMessages.innerHTML =
            "Password must be at least 8 characters long and include at least one letter, one number, and one special character.";
          return false;
        }

        return true;
      }
    </script>
