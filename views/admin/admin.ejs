                      <thead>
                        <tr>
                          <th>OrderId </th>
                          <th> Billing Name </th>
                          <th> Date </th>
                          <th> Total </th>
                          <th>Payment Status</th>
                          <th>Payment Method</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% latestOrders.forEach((order,index)=>{ %>
                          <tr>
                            <td>
                              <%= index + 1 %>
                            </td>
                            <td>
                              <%= order.order_id%>
                            </td>
                            <td>
                              <%= moment(order.date).format('DD MMM, YYYY') %>
                            </td>
                            <td>
                              <%= (order.items.price * order.items.quantity)-order.items.discountPerItem%>
                            </td>
                            <td>
                              <%= order.items.ordered_status%>
                            </td>
                            <td>
                              <%= order.payment%>
                            </td>
                            <td>
                              <a style="text-decoration: none;color: red;"
                                href="/admin/order-details?orderId=<%=order._id%>&&itemId=<%=order.items._id%>">
                                <div class="badge badge-outline-danger">
                                  Veiw Details
                                </div>
                              </a>

                            </td>
                          </tr>
                          <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
