                  <h4 class="card-title">New Users</h4>
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>SI NO </th>
                          <th> UserName </th>
                          <th> Email </th>
                          <th> Mobile </th>
                          <th> Joined Date</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% latestUsers.forEach((users,index)=>{ %>
                          <tr>
                            <td>
                              <%= index + 1 %>
                            </td>
                            <td>
                              <%= users.username%>
                            </td>
                            <td>
                              <%= users.email%>
                            </td>
                            <td>
                              <%= users.mobileNumber%>
                            </td>
                            <td>
                              <%= users.createdAt.toLocaleDateString() %>
                            </td>
                          </tr>
                          <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- ====================== ORDER TABLE===========================-->
