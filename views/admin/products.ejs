                            }).then((result) => {
                                if (result.isConfirmed) {
                                    const userId = this.getAttribute('data-product-id');
                                    updateUserStatus(userId, newStatus);
                                    Swal.fire({
                                        title: "Updated!",
                                        text: "product status has been updated.",
                                        icon: "success"
                                    });
                                    location.reload()
                                }
                                x
                            });
                        });
                    });
                }

                function updateUserStatus(productId, action) {
                    fetch(`/admin/product/${action}/${productId}`, {
                        method: 'POST'
                    })
                        .then((response) => response.json())
                        .then((data) => {
                            console.log(data);

                            // Update the UI
                            const statusElement = document.getElementById(`status_${productId}`);
                            const buttonElement = document.querySelector(`.user-status[data-product-id="${productId}"]`);

                            if (data.products.is_blocked) {
                                statusElement.innerHTML = '<span class="badge rounded-pill alert-warning">Listed</span>';
                                buttonElement.innerText = 'unlist';
                                buttonElement.classList.remove('btn-inverse-success');
                                buttonElement.classList.add('btn-inverse-danger');
                            } else {
                                statusElement.innerHTML = '<span class="badge rounded-pill alert-success">unlisted</span>';
                                buttonElement.innerText = 'List';
                                buttonElement.classList.remove('btn-inverse-danger');
                                buttonElement.classList.add('btn-inverse-success');
                            }
                        })
                        .catch((error) => {
                            console.log("error:", error);
                        });
                }

            </script>

            <script>
                function showModal(productId) {
                    $('#discountModal').modal('show');
                    const offerElements = document.querySelectorAll('.modal-body.text-center');
                    offerElements.forEach((element) => {
                        element.onclick = function () {
                            const offerId = this.getAttribute('data-offerid');
                            enterOffer(offerId, productId);
                        };
                    });
                }


                async function enterOffer(offerId, productId) {
                    $('#discountModal').modal('hide');
                    const response = await axios.patch('/admin/applyProductOffer', { offerId, productId })
                    if (response.data.success) {
                        Swal.fire({
                            title: 'Offer applied',
                            icon: 'success',
                            confirmButtonText: 'OK'
                        }).then((result) => {
                            if (result.isConfirmed || result.isDismissed) {
                                window.location = '/admin/product';
                            }
                        });
                    }
                }

                async function removeOffer(productId) {
                    try {
                        const isConfirmed = await Swal.fire({
                            title: 'Are you sure?',
                            text: "You won't be able to revert this!",
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#d33',
                            cancelButtonColor: '#3085d6',
                            confirmButtonText: 'Yes, remove it!'
                        });
                        if (isConfirmed.isConfirmed) {
                            const response = await axios.patch('/admin/removeProductOffer', { productId })
                            if (response.data.success) {
                                window.location = '/admin/product'
                            }
                        }
                    } catch (error) {
                        console.error(error);

                    }
                }
            </script>

