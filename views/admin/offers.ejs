            <div class="main-panel" style="width:100%;">
                <div class="content-wrapper">
                    <div class="col-lg-12 stretch-card">
                        <div class="card">
                            <div class="card-body">
                                </p>
                                <div class="table-responsive" id="offer">
                                    <table class="table table-bordered table-contextual" id="example">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Starting Date</th>
                                                <th>Expiry Date</th>
                                                <th>Percentage</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if(offers.length> 0){ %>
                                                <% offers.forEach(offer=>{ %>
                                                    <tr>
                                                        <td>
                                                            <%= offer.name %>
                                                        </td>
                                                        <td>
                                                            <%= moment(offer.startingDate).format('DD/MM/YYYY') %>
                                                        </td>
                                                        <td>
                                                            <%= moment(offer.expiryDate).format('DD/MM/YYYY') %>
                                                        </td>
                                                        <td>
                                                            <%= offer.percentage %>%
                                                        </td>
                                                        <td>
                                                            <span id="">
                                                                <% if(offer.status===true ){ %>


                                                                    <span
                                                                        class="badge rounded-pill alert-success">Active</span>
                                                                    <% }else{ %>
                                                                        <span
                                                                            class="badge rounded-pill alert-warning">Not
                                                                            Acive</span>
                                                                        <% } %>
                                                        </td>
                                                        <td>
                                                            <button class="btn btn-md btn-outline-danger font-sm" onclick="deleteOffer('<%= offer._id %>')">x

                                                            </button>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                                        <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <script>
                function deleteOffer(id){
                    Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    background: "#191c24",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes !",
                    cancelButtonText: "Cancel",
                }).then((result)=>{
                    if(result.isConfirmed){
                        $.ajax({
                            url:"/admin/delete-offer",
                            data:{
                                id:id,
                            },
                            method:'post',
                            success:(response)=>{
                                if(response.success){
                                    $("#offer").load("/admin/offers #offer")
                                }
                            }
                        })
                    }
                })
                }
            </script>



